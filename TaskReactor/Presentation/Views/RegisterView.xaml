<UserControl x:Class="Presentation.Views.RegisterView"
             x:Name="RegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Presentation.Views"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:viewModels="clr-namespace:Presentation.ViewModels"
             xmlns:cm="http://caliburnmicro.com"
             d:DesignWidth="800"
             d:DesignHeight="600"
             mc:Ignorable="d"
             cm:Bind.AtDesignTime="True"
             d:DataContext="{d:DesignInstance viewModels:RegisterViewModel}">
    <Grid>
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#E5E7EB" Offset="0.93"/>
                    <GradientStop Color="White" Offset="0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <StackPanel VerticalAlignment="Top">
            <Image Source="images\title.png" Margin="234,0,234,460"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Stretch" 
                VerticalAlignment="Center" 
                Margin="40,150,40,35"
                Background="Transparent">
            <StackPanel.Resources>
                <Thickness x:Key="Margin">10</Thickness>
            </StackPanel.Resources>

            <Border BorderBrush="#4682B4"
                    Opacity="0.8"
                BorderThickness="2" 
                CornerRadius="5" >

                <StackPanel Margin="{StaticResource Margin}">

                    <DockPanel>
                        <Image Source="images\账号.png" 
                   Width="20"
                   Height="20"
                   DockPanel.Dock="Left"
                   Margin="{StaticResource Margin}"/>
                        <Border DockPanel.Dock="Right" 
                    BorderBrush="	#4682B4"
                    BorderThickness="2"
                    CornerRadius="5"
                    Margin="{StaticResource Margin}"
                    Background="White">
                            <TextBox VerticalAlignment="Center"
                         x:Name="Set_UserName"
                         Background="Transparent"
                         BorderThickness="0"
                         metro:TextBoxHelper.Watermark="请设置您的账号名" />
                        </Border>
                    </DockPanel>

                    <DockPanel>
                        <Image Source="images\密码.png" 
                   Width="20"
                   Height="20"
                   DockPanel.Dock="Left"
                   Margin="{StaticResource Margin}"/>
                        <Border DockPanel.Dock="Right" 
                    BorderBrush="	#4682B4"
                    BorderThickness="2"
                    CornerRadius="5"
                    Margin="{StaticResource Margin}"
                    Background="White">
                            <PasswordBox VerticalAlignment="Center" 
                                     x:Name="Set_Password"
                                     Background="Transparent"
                             BorderThickness="0"
                             metro:TextBoxHelper.Watermark="请设置您的密码"/>
                        </Border>
                    </DockPanel>

                    <DockPanel>
                        <Image Width="20"
                   Height="20"
                   DockPanel.Dock="Left"
                   Margin="{StaticResource Margin}"/>
                        <Border DockPanel.Dock="Right" 
                    BorderBrush="	#4682B4"
                    BorderThickness="2"
                    CornerRadius="5"
                    Margin="{StaticResource Margin}"
                    Background="White">
                            <PasswordBox VerticalAlignment="Center" 
                                     x:Name="Confirm_Password"
                                     Background="Transparent"
                             BorderThickness="0"
                             metro:TextBoxHelper.Watermark="请再次确认您的密码"/>
                        </Border>
                    </DockPanel>

                    <Label HorizontalAlignment="Center" x:Name="RegisteredId"/>

                    <Button HorizontalAlignment="Center"
                x:Name="Register"
                Content="注册"
                Background="#87CEEB" 
                Foreground="	#696969"
                FontSize="14"
                Margin="{StaticResource Margin}"
                Width="150"
                Height="30"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
    
    
</UserControl>