<Page x:Class="Presentation.Views.WelcomePageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:cm="http://caliburnmicro.com"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      cm:Bind.AtDesignTime="True"
      d:DataContext="{d:DesignInstance viewModels:WelcomePageViewModel}">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="DisplayName"
                 Height="30"
                 Width="200"
                 Style="{DynamicResource MahApps.Styles.TextBox.Button}"/>

        <TextBlock
            Text="{Binding DisplayName}"
            Height="30"
            Width="200"
            Style="{DynamicResource MahApps.Styles.TextBlock}"/>
    </StackPanel>
</Page>